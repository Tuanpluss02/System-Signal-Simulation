% Cau a
data_bits = rand(1, 1500) > 0.5;
nrz_waveform = zeros(1, length(data_bits)*2);

for i = 1:length(data_bits)
    if data_bits(i) == 0
        nrz_waveform((i-1)*2+1:i*2) = -1;
    else
        nrz_waveform((i-1)*2+1:i*2) = 1;
    end
end

fs = 100e6; 
T = 1/fs; 
t = 0:T:(length(nrz_waveform)*T-T);
plot(t,nrz_waveform)

% Cau b
B = 200e6;
n = 2;
fs = 2/T;
fc = B/(2*fs); 
[b, a] = butter(n, fc);
filtered_waveform = filter(b, a, nrz_waveform);